{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx", 
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "tests/**/*",
    "node_modules"
  ]
}