  "bitcoin_ordinals": {
    "required_apis": [
      "https://ordinals.com/r/blockinfo/{blockNumber}",
      "https://ordinals.com/content/{inscriptionId}"
    ],
    "documentation": [
      "https://docs.ordinals.com/",
      "https://docs.tap-protocol.com/"
    ]
  },
  "version_compatibility": {
    "note": "ESLint downgraded to 8.57.0 for compatibility with React plugins",
    "eslint": "8.57.0",
    "typescript-eslint": "6.21.0",
    "react-plugins": "Compatible with ESLint 8.x"
  }
